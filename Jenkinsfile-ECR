pipeline{

    agent any

    parameters{
        choice(name: 'action', choices: 'create\ndestroy', description: 'choose create/destroy') 
    }
      environment{
        access_key= credentials('acesskey')
        secret_access_key= credentials('secret')
    }

    stages{
 stage('git checkout'){
             when{expression{params.action == 'create'}
            }
        steps{
            script{
                git branch: 'main', url: 'https://github.com/saikumarpinisetti3/mrdevops_java_app.git'

             }
         }
     }

        stage('create eks cluster') {
             when{
            expression{params.action == 'create'}
        }
    steps {
        script {
            dir('eks_module') {
                sh 'terraform init'
                sh "terraform plan -var 'access_key=AKIASWRVIS4JP2OAWR4O' -var 'secret_key=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' -var 'region=ap-south-1' --var-file=./config/terraform.tfvars"
                sh "terraform apply -var 'access_key=AKIASWRVIS4JP2OAWR4O' -var 'secret_key=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' -var 'region=ap-south-1' --var-file=./config/terraform.tfvars --auto-approve"
            }
        }
    }
}
}
}
